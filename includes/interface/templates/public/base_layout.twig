{% if ajax == false %}
    <!DOCTYPE html>
    <html>
        <head>
            <link rel="shortcut icon" href="{{ config.system_path }}/favicon.ico" type="image/x-icon">
            <link rel="icon" href="{{ config.system_path }}/favicon.ico" type="image/x-icon">
            <meta http-equiv="content-type" content="text/html; charset=utf-8"></meta>
            {% include "css.twig" %}
            <title>{{ config.title }}</title>
        </head>
        <body {% if event_interface_flag and event.id %} class="public-event-{{ event.id }}" {% endif %}>
            {% include "scripts.twig" %}
            <input type="hidden" id="dir-root" value="{{ config.system_path }}"/>
            <header id="main-header-wrap" {% if event_interface_flag %} class="event-interface" {% endif %}>
                <a href="{{ config.system_path }}">
                    <div class="title"><img src="{{ config.system_path}}/images/logo.png" alt="Dyon"/> <h1>DYON</h1></div>
                </a>
                {% if user %}
                    {% block user_header %}
                        {% include "user_header.twig" %}
                    {% endblock %}
                {% else %}

                    <div class="login-signup">
                        <a href="{{ config.system_path }}/login"><div class="login">Entrar</div></a>
                        <div class="signup"><a href="{{ config.system_path }}/signup">Criar uma Conta</a></div>
                    </div>
                    <div class="menu-header">
                        <div class="search-wrap">
                            <input type="text" class="search-input" placeholder="Encontre Eventos" />
                            <i class="fa fa-search search-submit" id="search-submit"></i>
                        </div>
                        <div class="item">
                            CATEGORIAS
                        </div>
                        <a href="{{ config.system_path }}/manager">
                            <div class="item last">
                                MANAGER
                            </div></a>
                    </div>
                {% endif %}
                <div class="clear"></div>
            </header>
            <div id="main-content-wrap">
                {% block content %}

                {% endblock %}
            </div>
            {% if not event_interface_flag %}
                <footer id="main-footer-wrap">
                    Dyon.vc © 2015 ~ 2016 - <a href="http://blog.dyon.vc" class="white-link">Blog</a> - <a href="http://sistema.dyon.vc">Administração</a> [ GC ] - Versão: 1.1RMK
                </footer>  
            {% endif %}
        </body>
    </html>
{% else %}
    {% block content_ajax %}
    {% endblock %}
{% endif %}