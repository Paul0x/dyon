<div class="title">{{ event.nome}}</div>
<div class="welcome">
    Olá, <strong>{{ user.nome }}</strong>, selecionamos algumas informações importantes sobre seu evento.
</div>
<div class="info">
        <div class="title">Vendas</div>
        <div class="block-50">
            <div class="subtitle">Hoje</div>
            <div class="value">
                {% if event.vendas_hoje > 0 %} + {% endif %}
                6{{event.vendas_hoje}}</div>
        </div>
        <div class="block-50">
            <div class="subtitle">Semana</div>
            <div class="value">                
                {% if event.vendas_semana > 0 %} + {% endif %}
                18{{event.vendas_semana}}</div>
        </div>
        <div class="block-100">
            <div class="subtitle">Total</div>
            <div class="value">
                {{ event.n_vendas}}
                {% if event.max_venda > 0 %}
                    / {{ event.max_venda }}
                {% endif %}</div>
        </div>
</div>
<div class="info">
        <div class="title">Financeiro</div>
        <div class="block-50">
            <div class="subtitle">Hoje</div>
            <div class="value">
                {% if event.vendas_hoje > 0 %} + {% endif %}
                6{{event.vendas_hoje}}</div>
        </div>
        <div class="block-50">
            <div class="subtitle">Semana</div>
            <div class="value">                
                {% if event.vendas_semana > 0 %} + {% endif %}
                18{{event.vendas_semana}}</div>
        </div>
        <div class="block-100">
            <div class="subtitle">Total</div>
            <div class="value">
                {{ event.n_vendas}}
                {% if event.max_venda > 0 %}
                    / {{ event.max_venda }}
                {% endif %}</div>
        </div>
</div>