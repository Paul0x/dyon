{% if ajax == false %}
    <!DOCTYPE html>
    <html>
        <head>
            <link rel="shortcut icon" href="{{ config.system_path }}/favicon.ico" type="image/x-icon">
            <link rel="icon" href="{{ config.system_path }}/favicon.ico" type="image/x-icon">
            <meta http-equiv="content-type" content="text/html; charset=utf-8"></meta>
            {% include "css.twig" %}
            <title>{{ config.title }}</title>
        </head>
        <body>
            {% include "scripts.twig" %}
            <input type="hidden" id="dir-root" value="{{ config.system_path }}"/>
            <header id="main-header-wrap">
                <a href="{{ config.system_path }}">
                    <div class="title"><img src="{{ config.system_path}}/images/logo.png" alt="Dyon"/> <h1>DYON</h1></div>
                </a>
                {% block user_header %}
                {% endblock %}
                <div class="clear"></div>
            </header>
            <section id="event-control-wrap">
                BARRA DE CONTROLE DE EVENTOS
            </section>
            <nav id="main-menu-wrap">
                {% block top_menu %}
                {% endblock %}
            </nav>
            <div id="main-content-wrap">
                {% block content %}

                {% endblock %}
            </div>
            <footer id="main-footer-wrap">
                Dyon.vc © 2015 ~ 2016 - <a href="http://blog.dyon.vc" class="white-link">Blog</a> - <a href="http://sistema.dyon.vc">Administração</a> [ GC ] - Versão: 1.1RMK
            </footer>            
        </body>
    </html>
{% else %}
    {% block content_ajax %}
    {% endblock %}
{% endif %}