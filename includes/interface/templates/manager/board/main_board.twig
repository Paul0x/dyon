{% extends "base_layout.twig" %}

{% block user_header %}
    {% include "user_header.twig" %}
{% endblock %}

{% block top_menu %}
    {% include "main_menu.twig" %}
{% endblock %}
{% block content %}
    <div id="dashboard-sidebar"></div>
    <div id="right-content-boards" class="right-content-boards">
        <div id='board-control-wrap'>
            <div class='title'><strong>Gerencia da Equipe</strong> | Discussões e Tarefas</div>
            <div class='selection'>
                <select id="board-select">
                    <option value="">Selecione uma Board</option>
                </select>
                <div class="control" id="board-user-control" title="Gerenciar Time e Usuários"><i class="fa fa-users" aria-hidden="true"></i></div>
                <div class="control" id="board-add-board" title="Adicionar Board"><i class="fa fa-plus" aria-hidden="true"></i></div>
            </div>
            <div class='clear'></div>
        </div>
        <div id='board-wrap'>
        </div>
    </div>
    <script>
        board_interface = new boardInterface();
        board_interface.initBoards();
        dashboard_interface = new dashboardInterface();
        dashboard_interface.load();
    </script>
{% endblock %}